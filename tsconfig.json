{
	"compilerOptions": {
		"target": "es5",
		"lib": ["ScriptHost", "ES5", "DOM", "ES2015"],
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"declaration": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
